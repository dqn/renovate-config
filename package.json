{
  "name": "@dqn/renovate-config",
  "version": "0.2.1",
  "license": "MIT",
  "scripts": {
    "test": "renovate-config-validator"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "assignees": [
        "dqn"
      ],
      "lockFileMaintenance": {
        "enabled": true
      },
      "postUpdateOptions": [
        "gomodTidy",
        "yarnDedupeHighest"
      ],
      "packageRules": [
        {
          "automerge": true,
          "major": {
            "automerge": false
          },
          "depTypeList": [
            "dependencies",
            "devDependencies"
          ]
        },
        {
          "automerge": true,
          "major": {
            "automerge": false
          },
          "packageNames": [
            "renovate"
          ]
        }
      ],
      "rangeStrategy": "auto"
    }
  },
  "devDependencies": {
    "renovate": "31.64.1"
  }
}
